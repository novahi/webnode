<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Tên</th>
      <th scope="col">Địa Chỉ</th>
      <th scope="col">Thời Gian Tạo</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
    <tr>
      <th scope="row">{{sum @index 1}}</th>
      <td><a href="/users/{{this.slug}}">{{this.name}}</a></td>
      <td>{{this.address}}</td>
      <td>{{this.createdAt}}</td>
      <td>
         <a href="/users/{{this._id}}/edit">Sửa</a>
         <a href="#">Xoá</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
