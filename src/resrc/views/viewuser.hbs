<div class="container">

   <div class="card mt-4 container justify-content-center placeholder-glow" style="width: 18rem;">

      <img src="{{data.image}}" class="card-img-top" alt="Loading...!" id="img">

      <div class="card-body">

         <h5 class="card-title" style="text-align: center" id="title"> {{data.name}}</h5>

         <p class="card-text" id="text">

            <ion-icon name="logo-facebook"></ion-icon>

            {{data.facebook}}

         </p>

         <p class="card-text " id="mail">

            <ion-icon name="mail"></ion-icon>

            {{data.mail}}

         </p>

         <p class="card-text" id="ads">

            <ion-icon name="home"></ion-icon>

            {{data.address}}

         </p>

         <a href="http://m.me/{{data.facebook}}" class="btn btn-primary col-6"  id="btn">Message</a>

      </div>

   </div>

</div>

</div>


<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>

